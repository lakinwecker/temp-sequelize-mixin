{
  "include": ["src/**/*"],
  "compilerOptions": {
    "target": "es2019",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "lib": ["es6"],
    "allowJs": true,
    "outDir": "build",
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": true,
    "strictPropertyInitialization": false, // Needed for sequelize models. :(
    "esModuleInterop": true,
    "resolveJsonModule": true
  }
}
